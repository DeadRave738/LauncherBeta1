<Window x:Class="MinecraftLauncher.Views.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Регистрация" Height="624" Width="600"
        Background="{DynamicResource MaterialDesignChipBackground}"
        WindowStartupLocation="CenterScreen">

	<Grid Margin="30,30,30,28">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="236*"/>
			<RowDefinition Height="17*"/>
			<RowDefinition Height="Auto" MinHeight="66.235"/>
		</Grid.RowDefinitions>

		<TextBlock Text="Создание аккаунта" FontSize="24" FontWeight="Bold" Margin="0,0,0,30" HorizontalAlignment="Center" Width="222"/>

		<ScrollViewer Grid.Row="1" Height="371" VerticalAlignment="Top" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
			<StackPanel Margin="0" Height="363">
				<TextBox materialDesign:HintAssist.Hint="Имя пользователя" x:Name="txtUsername" Foreground="White"/>
				<TextBox materialDesign:HintAssist.Hint="Электронная почта (необязательно)" x:Name="txtEmail" Margin="0,0,0,15" Foreground="White"/>
				<PasswordBox materialDesign:HintAssist.Hint="Пароль" x:Name="txtPassword" Margin="0,0,0,15" Foreground="White"/>
				<PasswordBox materialDesign:HintAssist.Hint="Подтвердите пароль" x:Name="txtConfirmPassword" Margin="0,0,0,15" Foreground="White"/>
				<TextBox materialDesign:HintAssist.Hint="Имя пользователя в Minecraft" x:Name="txtMinecraftUsername" Margin="0,0,0,15" Foreground="White"/>

				<Button Content="Прочитать лицензионное соглашение" Click="btnViewLicense_Click" 
                        Style="{StaticResource FlatButtonStyle}" HorizontalAlignment="Left" Padding="16,-5,16,4"/>
			</StackPanel>
		</ScrollViewer>

		<StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0" Width="316">
			<Button Content="Отмена" Click="btnCancel_Click" Style="{StaticResource FlatButtonStyle}" Margin="5,5,5,5" Padding="16,-6,16,4"/>
			<Button Content="Зарегистрироваться" Click="btnRegister_Click" Margin="10,0,0,0" 
                    Background="#FF673AB7" Foreground="White" Padding="20,-6,20,5"/>
		</StackPanel>
	</Grid>
</Window>