<Window x:Class="MinecraftLauncher.Views.DiagnosticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Диагностика сети" Height="595" Width="1238"
        Background="#303030">
	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<TextBlock Text="Диагностика сети" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

		<Button x:Name="btnCheckInternet" Content="Проверить подключение к интернету" 
                Click="btnCheckInternet_Click" 
                Background="#FF673AB7" Foreground="White" Padding="15,-8,15,8" 
                Margin="849,4,0,24" HorizontalAlignment="Left"/>

		<Button x:Name="btnCheckServer" Content="Проверить доступность сервера" 
                Click="btnCheckServer_Click" 
                Background="#FF673AB7" Foreground="White" Padding="15,-9,15,8" 
                Margin="559,5,0,23" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
			<Button.RenderTransform>
				<TransformGroup>
					<ScaleTransform/>
					<SkewTransform AngleX="1.123"/>
					<RotateTransform/>
					<TranslateTransform X="0.314"/>
				</TransformGroup>
			</Button.RenderTransform>
		</Button>

		<Button x:Name="btnCheckAll" Content="Полная диагностика" 
                Click="btnCheckAll_Click" 
                Background="#FF673AB7" Foreground="White" Padding="15,-8,15,8" 
                Margin="343,4,0,24" HorizontalAlignment="Left"/>

		<ScrollViewer Grid.Row="4" Margin="0,10,0,10" Background="#404040" BorderThickness="1" BorderBrush="#505050">
			<TextBlock x:Name="txtResults" TextWrapping="Wrap" FontSize="14" Foreground="White" Padding="10"/>
		</ScrollViewer>

		<Button Grid.Row="4" Content="Закрыть" Click="btnClose_Click" 
                Background="#FF673AB7" Foreground="White" Padding="15,-9,15,6.7" 
                Width="100" HorizontalAlignment="Right" Margin="0,344,0,0"/>
	</Grid>
</Window>