<Application x:Class="MinecraftLauncher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             StartupUri="Views/AuthWindow.xaml">
	<Application.Resources>
		<ResourceDictionary>
			<!-- Подключаем Material Design с правильными путями -->
			<ResourceDictionary.MergedDictionaries>
				<!-- Сначала подключаем цвета -->
				<ResourceDictionary Source="/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml" />
				<ResourceDictionary Source="/MaterialDesignColors;component/Themes/Recommended/Accent/MaterialDesignColor.Amber.xaml" />

				<!-- Затем подключаем темы -->
				<ResourceDictionary Source="/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
				<ResourceDictionary Source="/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
			</ResourceDictionary.MergedDictionaries>

			<!-- Глобальные стили -->
			<Style x:Key="FlatButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
				<Setter Property="Margin" Value="5" />
				<Setter Property="FontSize" Value="14" />
				<Setter Property="Foreground" Value="White" />
			</Style>

			<Style x:Key="CustomTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFilledTextBox}">
				<Setter Property="Margin" Value="5,10" />
				<Setter Property="FontSize" Value="14" />
				<Setter Property="Foreground" Value="White" />
				<Setter Property="Background" Value="#40FFFFFF" />
				<Setter Property="materialDesign:HintAssist.IsFloating" Value="True" />
			</Style>

			<!-- Исправленный стиль для PasswordBox -->
			<Style x:Key="CustomPasswordBoxStyle" TargetType="PasswordBox">
				<Setter Property="Margin" Value="5,10" />
				<Setter Property="FontSize" Value="14" />
				<Setter Property="Foreground" Value="White" />
				<Setter Property="Background" Value="#40FFFFFF" />
				<Setter Property="materialDesign:HintAssist.IsFloating" Value="True" />
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="PasswordBox">
							<Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="2">
								<ScrollViewer x:Name="PART_ContentHost" Margin="5"/>
							</Border>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>

			<Style TargetType="CheckBox" BasedOn="{StaticResource MaterialDesignCheckBox}">
				<Setter Property="Margin" Value="5,10" />
				<Setter Property="FontSize" Value="14" />
				<Setter Property="Foreground" Value="White" />
			</Style>

			<Style TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignBody1TextBlock}">
				<Setter Property="Margin" Value="5" />
				<Setter Property="Foreground" Value="White" />
			</Style>
		</ResourceDictionary>
	</Application.Resources>
</Application>